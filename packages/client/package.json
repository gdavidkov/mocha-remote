{
  "name": "mocha-remote-client",
  "version": "0.16.0",
  "description": "Run Mocha tests somewhere - get reporting elsewhere",
  "scripts": {
    "build": "npm run build/webpack && npm run build/node",
    "build/webpack": "webpack --config config/webpack.js",
    "build/node": "../../node_modules/.bin/tsc -p tsconfig.node.json",
    "prepare": "npm run build",
    "prepack": "cp ../../README.md .",
    "test": "../../node_modules/.bin/mocha --opts ../../configs/mocha.opts **/*.test.ts"
  },
  "main": "dist/node/index.js",
  "browser": "dist/bundled/browser.bundle.js",
  "react-native": "dist/bundled/react-native.bundle.js",
  "types": "dist/node/index.d.ts",
  "author": {
    "name": "Kr√¶n Hansen",
    "email": "mail@kraenhansen.dk",
    "url": "https://github.com/kraenhansen"
  },
  "keywords": [
    "mocha"
  ],
  "repository": "github:kraenhansen/mocha-remote",
  "bugs": "https://github.com/kraenhansen/mocha-remote/issues",
  "license": "ISC",
  "optionalDependencies": {
    "ws": "*"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "flatted": "^2.0.1",
    "isomorphic-ws": "^4.0.1"
  },
  "devDependencies": {
    "@types/ws": "^7.4.0",
    "ts-loader": "^8.0.18",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "ws": "^7.4.4"
  },
  "peerDependencies": {
    "mocha": "^6"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "shared-node-browser": true
    }
  }
}
